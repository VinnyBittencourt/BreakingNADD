@model List<NADD.Models.Questoes>

@{
    ViewData["Title"] = "Index";
    var avaId = "";
    var avaPeriodo = "";
    @foreach (var item in Model)
    {
        //avaPeriodo = item.Avaliacao.Periodo;
        avaId = item.AvaliacaoId.ToString();
        //avaDisc= item.Avaliacao.Disciplinas.NomeDisciplina;
    }
}
<!--<p class="sub-titulo">Controle de Questões</p>-->
<h3 class="sub-titulo">Listagem de Questões</h3>

<div class="col-md-8" style="margin-top:20px; margin-bottom: 20px;">
    <a asp-action="Create" id="addQuestao" class="btn btn-info sm-lg col-md-4 m-b-5"> <span class="glyphicon glyphicon-plus"></span> Registrar nova questão</a>
    <div class="col-md-12"></div>
</div>
<table class="table">
    <thead>
        <tr>
            <!--<th>Id Questao</th>-->
            <th>Número Questão</th>
            <th>Tipo Questão</th>
            <th>Observações</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!--<td class="col-md-3">@Html.DisplayFor(modelItem => item.QuestoesId)</td>-->
                <td class="col-md-3">@Html.DisplayFor(modelItem => item.NumeroQuestao)</td>
                <td class="col-md-3">
                    @{
                        var opcao = "";
                        if (@item.Tipo.ToString() == "1")
                        { opcao = "Textual"; }
                        else { opcao = "Multipla escolha"; }
                    }
                    @opcao
                </td>
                <td class="col-md-3">@Html.DisplayFor(modelItem => item.Observacao)</td>
                <td class="col-md-3">@Html.DisplayFor(modelItem => item.Avaliacao.PeriodoAno)</td>
                <td class="col-md-3">
                    <a href="/Questoes/Edit/@item.QuestoesId" class="col-md-12 btn btn-success">Atualizar</a>
                </td>
                <td class="col-md-3"><a href="/Questoes/Delete/@item.QuestoesId" class="col-md-12 btn btn-danger">Deletar</a></td>

            </tr>
        }
    </tbody>
</table>
