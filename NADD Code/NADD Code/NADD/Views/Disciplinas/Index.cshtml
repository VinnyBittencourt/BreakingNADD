@model IEnumerable<NADD.Models.Disciplina>

@{
    ViewData["Title"] = "Disciplina";
}

<h2>Disciplinas</h2>

<p>
    <a asp-action="Create" class="btn btn-info">Nova Disciplina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDisciplina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDisciplina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso.NomeCurso)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DisciplinaId" class="btn btn-success btn-sm">Atualizar</a> |
                    <a asp-action="Details" asp-route-id="@item.DisciplinaId" class="btn btn-info btn-sm">Informações</a> |
                    <a asp-action="Delete" asp-route-id="@item.DisciplinaId" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
